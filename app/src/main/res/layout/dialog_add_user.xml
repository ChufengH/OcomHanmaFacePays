<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/shape_add_user_container"
        android:orientation="vertical">
    <TextView
            android:id="@+id/titleTv"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:text="添加用户"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/common_text_white"
            android:background="#001212"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_text_white"/>


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImageIv"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_user_circle"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/common_text_white"
            android:layout_width="92dp"
            android:layout_height="92dp"/>

    <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="right"
                    android:textSize="18sp"
                    android:text="姓名:"
                    android:textColor="@color/common_text_white"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/userNameEdt"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@null"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_text_white"
                    android:hint="点击输入姓名"
                    android:textColorHint="@color/common_edittext_sub"
                    android:lines="1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="right"
                    android:textSize="18sp"
                    android:text="用户ID:"
                    android:textColor="@color/common_text_white"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/userIdEdt"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@null"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_text_white"
                    android:hint="点击输入用户ID"
                    android:textColorHint="@color/common_edittext_sub"
                    android:lines="1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="right"
                    android:textSize="18sp"
                    android:text="卡号:"
                    android:textColor="@color/common_text_white"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/cardNumberEdt"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@null"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_text_white"
                    android:hint="点击输入卡号"
                    android:textColorHint="@color/common_edittext_sub"
                    android:lines="1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/cardScanBtn"
                    android:padding="4dp"
                    android:background="@drawable/shape_setting_item"
                    android:layout_marginStart="5dp"
                    android:text="刷卡识别"
                    android:textColor="@color/common_text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="right"
                    android:textSize="18sp"
                    android:text="管理员:"
                    android:textColor="@color/common_text_white"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"/>
            <RadioGroup
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RadioButton
                        android:id="@+id/noAdminRadioBtn"
                        android:checked="true"
                        android:text="非管理员"
                        android:textColor="@color/common_text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioButton
                        android:id="@+id/adminRadioBtn"
                        android:text="管理员"
                        android:textColor="@color/common_container_background_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="260dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/saveBtn"
                android:background="#006666"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/icon_success"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            <TextView
                    android:layout_marginStart="5dp"
                    android:text="保存"
                    android:textColor="@color/common_text_white"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/cancelBtn"
                android:background="#884400"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/icon_cancel"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            <TextView
                    android:layout_marginStart="5dp"
                    android:text="取消"
                    android:textColor="@color/common_text_white"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>