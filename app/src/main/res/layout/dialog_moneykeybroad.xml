<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingBottom="4dp"
        android:background="#FF567777">
    <TextView
            android:textColor="@color/common_text_white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">
        <TextView
                android:id="@+id/input_1"
                android:text="1"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_2"
                android:text="2"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_3"
                android:text="3"
                style="@style/MoneyKeyBroadTextView"/>
    </LinearLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="78dp">
        <TextView
                android:id="@+id/input_4"
                android:text="4"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_5"
                android:text="5"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_6"
                android:text="6"
                style="@style/MoneyKeyBroadTextView"/>
    </LinearLayout>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="78dp">
        <TextView
                android:id="@+id/input_7"
                android:text="7"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_8"
                android:text="8"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_9"
                android:text="9"
                style="@style/MoneyKeyBroadTextView"/>
    </LinearLayout>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="78dp">
        <TextView
                android:id="@+id/input_0"
                android:text="0"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_point"
                android:text="."
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_delete"
                android:background="@drawable/selector_moneykeybroad_delete"
                android:textColor="@color/common_text_white"
                android:text="删除"
                style="@style/MoneyKeyBroadTextView"/>
    </LinearLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="78dp">
        <TextView
                android:id="@+id/input_clear"
                android:background="@drawable/selector_moneykeybroad_clear"
                android:textColor="@color/common_text_white"
                android:text="清空"
                style="@style/MoneyKeyBroadTextView"/>
        <TextView
                android:id="@+id/input_confrim"
                android:textColor="@color/common_text_white"
                android:background="@drawable/selector_moneykeybroad_confrim"
                android:layout_weight="0.6"
                android:text="确认"
                style="@style/MoneyKeyBroadTextView"/>
    </LinearLayout>


</LinearLayout>