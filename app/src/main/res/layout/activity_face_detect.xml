<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".ui.act.FaceDetectActivity">
    <Button
            android:id="@+id/btn_back"
            android:background="@drawable/selector_button_white_broder"
            android:clickable="true"
            android:text="返回"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/common_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#0099cc"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="检测中"
            android:textSize="40dp"
            android:layout_width="0dp"
            android:layout_height="110dp"/>

    <TextView
            android:id="@+id/tv_face_hint"
            android:textColor="@android:color/holo_red_light"
            android:gravity="center"
            android:background="#0099cc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            android:text="刷脸消费,请注意!!"
            android:textSize="45dp"
            android:layout_width="0dp"
            android:layout_height="110dp"/>

    <include
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_face_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/camera_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>