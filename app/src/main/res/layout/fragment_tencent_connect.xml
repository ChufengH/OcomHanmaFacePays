<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_container_background_deepGreen"
        android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/connect_statusRefreshBtn"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:text="点击刷新"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:src="@drawable/ic_refresh_white_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
            </LinearLayout>


            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:text="连接状态："
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/connect_connectStatusTv"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:textSize="12sp"
                        android:text="网络类型"
                        android:textColor="@color/common_text_white"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/connect_netTypeTv"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/common_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:textSize="12sp"
                        android:text="IP地址："
                        android:textColor="@color/common_text_white"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/connect_ipAddressTv"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/common_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:text="网关："
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/connect_gatewayTv"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:text="子网掩码："
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/connect_netMaskTv"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:id="@+id/ll_net_host"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                <TextView
                        android:text="云服务器地址:"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/connect_netHostTv"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:background="@color/common_container_background_lightGreen"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <TextView
                    android:id="@+id/connect_settingBtn"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="设置网络连接"
                    android:textColor="@color/common_text_white"
                    android:background="@color/common_container_background_lightGreen"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>