<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_container_background_deepGreen"
        android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:textStyle="bold"
                    android:text="金额相关设置"
                    android:textColor="@color/common_text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="2dp"
                    android:background="@color/common_text_white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/RefundTv"
                    android:text="交易记录退款开关"
                    android:textSize="12sp"
                    android:textColor="@color/common_text_white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Switch
                    android:id="@+id/refundSwitch"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:switchTextAppearance="@style/SwitchTheme"
                    android:textSize="10sp"
                    android:track="@drawable/selector_switch_track"
                    android:thumb="@drawable/selector_switch_thumb"
                    android:textOff="@string/close"
                    android:textOn="@string/open"
                    android:showText="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:targetApi="lollipop" android:layout_marginTop="0dp"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/constantMoneyTv"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Switch
                        android:id="@+id/constantMoneySwitch"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:switchTextAppearance="@style/SwitchTheme"
                        android:textSize="10sp"
                        android:track="@drawable/selector_switch_track"
                        android:thumb="@drawable/selector_switch_thumb"
                        android:textOff="@string/close"
                        android:textOn="@string/open"
                        android:showText="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" tools:targetApi="lollipop" android:layout_marginTop="0dp"
                        android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_marginStart="10dp"
                        android:textSize="10sp"
                        android:textColor="@color/common_text_subtitle"
                        android:text="@string/please_set_constant_money"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <EditText
                            android:id="@+id/constantMoneyEdt"
                            android:hint="在此输入金额"
                            android:inputType="numberDecimal"
                            android:visibility="gone"
                            android:textSize="12sp"
                            android:lines="1"
                            android:gravity="center"
                            android:background="@drawable/selector_edittext_bg"
                            android:layout_width="120dp"
                            android:layout_height="38dp"/>
                    <TextView
                            android:id="@+id/constantMoneyBtn"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="@string/setting"
                            android:textColor="@color/common_text_white"
                            android:background="@drawable/selector_button_white_broder"
                            android:layout_width="32dp"
                            android:layout_height="26dp"/>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="用户相关设置"
                    android:textColor="@color/common_text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="2dp"
                    android:background="@color/common_text_white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/registUserTv"
                        android:textSize="12sp"
                        android:textColor="@color/common_text_white"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Switch
                        android:id="@+id/registUserSwitch"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:switchTextAppearance="@style/SwitchTheme"
                        android:textSize="10sp"
                        android:track="@drawable/selector_switch_track"
                        android:thumb="@drawable/selector_switch_thumb"
                        android:textOff="@string/close"
                        android:textOn="@string/open"
                        android:showText="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" tools:targetApi="lollipop" android:layout_marginTop="0dp"
                        android:layout_alignParentTop="true"/>
            </RelativeLayout>

            <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="操作设置"
                    android:visibility="gone"
                    android:textColor="@color/common_text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:background="@color/common_text_white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <TextView
                    android:id="@+id/quickPayTv"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/common_text_white"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RadioGroup
                        android:id="@+id/quickPayRadioGroup"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp">

                    <RadioButton
                            android:id="@+id/facePayRadioButton"
                            android:checked="true"
                            android:button="@drawable/selector_radiobutton"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_white"
                            android:text="人脸支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/cardPayRadioButton"
                            android:layout_marginStart="5dp"
                            android:button="@drawable/selector_radiobutton"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_white"
                            android:text="刷卡支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <RadioButton
                            android:id="@+id/qrCodePayRadioButton"
                            android:layout_marginStart="5dp"
                            android:button="@drawable/selector_radiobutton"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_white"
                            android:text="二维码支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RadioGroup>
            </RelativeLayout>
            <TextView
                    android:id="@+id/settingBtn"
                    android:layout_marginTop="10dp" android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="打开设置"
                    android:textColor="@color/common_text_white"
                    android:background="@color/common_container_background_lightGreen"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>