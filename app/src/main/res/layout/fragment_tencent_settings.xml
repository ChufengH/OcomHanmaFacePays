<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#003333"
        android:orientation="horizontal">
    <LinearLayout

            android:id="@+id/setting_navContainer"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RadioGroup
                android:id="@+id/setting_radioBtn"
                android:background="@color/common_container_background_lightGreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RadioButton
                    android:id="@+id/setting_buissnessRadioBtn"
                    android:checked="true"
                    android:background="@drawable/selector_setting_radiobutton"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="业务设置"
                    android:textColor="@color/common_text_white"
                    android:button="@null"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"/>
            <!--<RadioButton-->
                    <!--android:id="@+id/setting_modeRadioBtn"-->
                    <!--android:background="@drawable/selector_setting_radiobutton"-->
                    <!--android:gravity="center"-->
                    <!--android:textSize="12sp"-->
                    <!--android:text="模式设置"-->
                    <!--android:textColor="@color/common_text_white"-->
                    <!--android:button="@null"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="58dp"/>-->
            <RadioButton
                    android:id="@+id/setting_connectBtn"
                    android:background="@drawable/selector_setting_radiobutton"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="连接设置"
                    android:textColor="@color/common_text_white"
                    android:button="@null"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"/>
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/setting_contentContainer"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">
    </RelativeLayout>

</LinearLayout>